{{!
    @template core/moremenu

    The More menu.

    Example context (json):
    {
        "nodecollection": {
            "children": [
                {
                    "text": "Home",
                    "action": "/index.php?redirect=0",
                    "active": "true"
                },
                {
                    "text": "Dashboard",
                    "action": "/my"
                },
                {
                    "text": "Courses",
                    "action": "/course"
                },
                {
                    "text": "Site Administration",
                    "action": "/admin/search.php"
                }
            ]
        }
    }
}}
<ul id="moremenu-{{ uniqid }}" class="nav navbar-nav ml-0" role="tablist">
    {{#nodecollection}}
        {{#children}}
            {{> core/moremenu_children}}
        {{/children}}
    {{/nodecollection}}
    {{{ rawmenu }}}
    <li class="nav-item dropdown dropdownmoremenu d-none">
        <a class="dropdown-toggle nav-link" href="#" id="moremenu-dropdown{{ uniqid }}" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            {{#str}}more, core{{/str}}
        </a>
        <ul class="dropdown-menu" data-region="moredropdown" aria-labelledby="moremenu-dropdown{{ uniqid }}" role="menu">
        </ul>
    </li>
</ul>
{{#js}}
require(['core/moremenu'], function(moremenu) {
    var moreMenu = document.querySelector('#moremenu-{{ uniqid }}');
    moremenu.init(moreMenu);
});
{{/js}}