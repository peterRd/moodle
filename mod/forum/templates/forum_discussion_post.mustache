{{!
    @template mod_forum/forum_post_email_htmlemail

    Template which defines a forum post for sending in a single-post HTML email.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
    }
}}
<article id="p{{id}}" class="relativelink mb-2" tabindex="-1" data-post-id="{{id}}">

    <div class="d-flex border p-2 mb-2 forumpost {{#unread}}unread{{/unread}}" data-post-id="{{id}}" data-content="forum-post">
        {{#isfirstunread}}<a id="unread"></a>{{/isfirstunread}}
        <div style="width: 45px;">
            {{^isdeleted}}
                {{#author}}
                    {{#urls.profileimage}}
                        <img class="rounded-circle w-100" src="{{{.}}}">
                    {{/urls.profileimage}}
                    {{#groups}}
                        <img class="rounded-circle w-100" src="{{{urls.image}}}">
                    {{/groups}}
                {{/author}}
            {{/isdeleted}}
        </div>

        <div class="d-flex flex-column ml-2 w-100" data-region-content="forum-post-core">
            <header class="mb-2 header row">
                <h3 class="h6 font-weight-bold mb-0">{{$subject}}{{{subject}}}{{/subject}}</h3>
                {{^isdeleted}}
                    <address>
                        {{{html.authorsubheading}}}
                    </address>
                {{/isdeleted}}
            </header>
            <div>
                {{{message}}}
            </div>

            {{^isdeleted}}
                {{#haswordcount}}
                    <p class="font-italic mb-0"><small>{{#str}} numwords, core, {{wordcount}} {{/str}}</small></p>
                {{/haswordcount}}

                {{#attachments}}
                    {{#isimage}}
                        <div>
                            <img src="{{{urls.file}}}" alt="{{filename}}" style="max-width: 100%">
                            {{#urls.export}}
                                <a href="{{{.}}}" title="{{#str}} addtoportfolio, core_portfolio {{/str}}">
                                    {{#pix}} t/portfolioadd, core {{/pix}}
                                </a>
                            {{/urls.export}}
                            {{#html.plagiarism}}
                                <div>{{{.}}}</div>
                            {{/html.plagiarism}}
                        </div>
                    {{/isimage}}
                {{/attachments}}

                {{{html.taglist}}}

                {{#attachments}}
                    {{^isimage}}
                        <div>
                            <a href="{{{urls.file}}}">{{{html.icon}}} {{filename}}</a>
                            {{#urls.export}}
                                <a href="{{{.}}}" title="{{#str}} addtoportfolio, core_portfolio {{/str}}">
                                    {{#pix}} t/portfolioadd, core {{/pix}}
                                </a>
                            {{/urls.export}}
                            {{#html.plagiarism}}
                                <div>{{{.}}}</div>
                            {{/html.plagiarism}}
                        </div>
                    {{/isimage}}
                {{/attachments}}

                {{#html.rating}}
                    <div class="mt-2">{{{.}}}</div>
                {{/html.rating}}

                {{$actions}}
                    {{^readonly}}
                        <div class="d-flex justify-content-end">
                            {{#capabilities}}
                                {{#view}}
                                    <a href="{{{urls.view}}}" class="btn btn-link btn-icon icon-size-3">
                                        {{#str}} permalink, mod_forum {{/str}}
                                    </a>
                                {{/view}}
                                {{#controlreadstatus}}
                                    {{#unread}}
                                        <a href="{{{urls.markasread}}}" class="btn btn-link btn-icon icon-size-3">
                                            {{#str}} markread, mod_forum {{/str}}
                                        </a>
                                    {{/unread}}
                                    {{^unread}}
                                        <a href="{{{urls.markasunread}}}" class="btn btn-link btn-icon icon-size-3">
                                            {{#str}} markunread, mod_forum {{/str}}
                                        </a>
                                    {{/unread}}
                                {{/controlreadstatus}}
                                {{#urls.viewparent}}
                                    <a href="{{{.}}}" class="btn btn-link btn-icon icon-size-3">
                                        {{#str}} parent, mod_forum {{/str}}
                                    </a>
                                {{/urls.viewparent}}
                                {{#edit}}
                                    <a href="{{{urls.edit}}}" class="btn btn-link btn-icon icon-size-3">
                                        {{#str}} edit, mod_forum {{/str}}
                                    </a>
                                {{/edit}}
                                {{#split}}
                                    <a href="{{{urls.split}}}" class="btn btn-link btn-icon icon-size-3">
                                        {{#str}} prune, mod_forum {{/str}}
                                    </a>
                                {{/split}}
                                {{#delete}}
                                    <a href="{{{urls.delete}}}" class="btn btn-link btn-icon icon-size-3">
                                        {{#str}} delete, mod_forum {{/str}}
                                    </a>
                                {{/delete}}
                                {{#reply}}
                                    <a data-post-id="{{id}}" href="{{{urls.reply}}}" data-action="collapsible-link"
                                       class="btn btn-link btn-icon icon-size-3"
                                       title="{{#str}} reply, mod_forum {{/str}}">
                                        {{#str}} reply, mod_forum {{/str}}
                                    </a>
                                {{/reply}}
                                {{#export}}
                                    <a href="{{{urls.export}}}" title="{{#str}} addtoportfolio, core_portfolio {{/str}}" class="btn btn-link btn-icon icon-size-3">
                                        {{#str}} addtoportfolio, core_portfolio {{/str}}
                                    </a>
                                {{/export}}
                            {{/capabilities}}
                        </div>
                    {{/readonly}}
                {{/actions}}

                {{$footer}}{{/footer}}
            {{/isdeleted}}
        </div>
    </div>

    <div data-region="replies-container">
    {{$replies}}
        <div>
        {{#hasreplies}}
            {{#replies}}
                {{> mod_forum/forum_discussion_post }}
            {{/replies}}
        {{/hasreplies}}
        </div>
    {{/replies}}
    </div>
</article>
